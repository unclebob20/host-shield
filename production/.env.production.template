# Production Environment Variables Template
# Copy this to .env on your server and fill in the values

# --- Database ---
DB_USER=hostshield_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD
GOV_DB_USER=gov_user
GOV_DB_PASSWORD=YOUR_SECURE_GOV_DB_PASSWORD

# --- API Server ---
JWT_SECRET=YOUR_LONG_RANDOM_STRING_FOR_JWT

# --- Gov Bridge ---
# This is the 'Subjekt' identifier from your certificate
GOV_API_TOKEN=YOUR_CERTIFICATE_SUBJECT_CN
# Random string for internal Rails session encryption
GOV_SECRET_KEY_BASE=YOUR_LONG_RANDOM_SECRET_KEY
